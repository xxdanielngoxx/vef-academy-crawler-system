<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="create-table-url-details" author="danielngo1998@gmail.com">
        <preConditions>
            <not>
                <tableExists tableName="url_details"/>
            </not>
        </preConditions>
        <createTable tableName="url_details">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="url" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="task_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="nvarchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="content_id" type="uuid">
            </column>
            <column name="dispatched_date" type="timestamp">
            </column>
            <column name="downloaded_date" type="timestamp">
            </column>
            <column name="extracted_date" type="timestamp">
            </column>
            <column name="failed_date" type="timestamp">
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="url_details"
                baseColumnNames="url"
                constraintName="fk_url_details_url"
                referencedTableName="urls"
                referencedColumnNames="url"
        />
    </changeSet>
</databaseChangeLog>